<div class="container mt-3">
    <div class="row">
        <div class="col-md-3 ">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">Management</a>
                <a href="/user/admin/users" class="list-group-item list-group-item-action">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Users
                </a>
                <a href="/user/admin/categories" class="list-group-item list-group-item-action">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                    Categories
                </a>
                <a href="/user/admin/courses" class="list-group-item list-group-item-action">
                    <i class="fa fa-book" aria-hidden="true"></i>
                    Courses
                </a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-12 mb-5">
                    <h3>List Categories</h3>
                    <div class="text-right">
                        <a href="/user/admin/addCategory">
                            <button type="button" class="btn btn-success">Add Category</button>
                        </a>
                    </div>
                </div>
                <hr />
                <% categories.forEach((category)=>{ %>
                    <div class="card col-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= category.name %>
                            </h5>
                            <a href="#" class="btn btn-info">Update</a>
                            <a href="#" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>


    </div>
</div>