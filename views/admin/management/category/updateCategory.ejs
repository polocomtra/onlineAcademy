<div class="container mt-3">
    <div class="row">
        <div class="col-md-3 ">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">Management</a>
                <a href="/user/admin/users" class="list-group-item list-group-item-action">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Users
                </a>
                <a href="/user/admin/categories" class="list-group-item list-group-item-action">
                    <i class="fa fa-bars" aria-hidden="true"></i>
                    Categories
                </a>
                <a href="/user/admin/courses" class="list-group-item list-group-item-action">
                    <i class="fa fa-book" aria-hidden="true"></i>
                    Courses
                </a>
            </div>
        </div>
        <div class="col-md-9">
            <% if(successMessage){ %>
                <div class="alert alert-success" role="alert">
                    <h4 class="alert-heading">
                        <%= successMessage %>
                    </h4>
                </div>
                <% } %>
                    <div class="row">
                        <div class="col-md-12">
                            <form method="POST">
                                <div class="form-group row">
                                    <label for="field" class="col-4 col-form-label">Fields Name</label>
                                    <div class="col-8">
                                        <input id="field" name="field" class="form-control here"
                                            value="<%= category.field.name%> " type="text" readonly>
                                        <input id="fieldObjectId" name="fieldObjectId" value="<%= category.field._id%> "
                                            type="hidden">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="category" class="col-4 col-form-label">Category Name</label>
                                    <div class="col-8">
                                        <input id="category" name="category" value="<%= category.name%> "
                                            class="form-control here" type="text">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label for="alias" class="col-4 col-form-label">Alias Name</label>
                                    <div class="col-8">
                                        <input id="alias" name="alias" value="<%= category.alias%> "
                                            class="form-control here" type="text">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="offset-4 col-8">
                                        <button type="submit" class="btn btn-info">Update Category</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
        </div>
    </div>
</div>