<div class="container mt-5">
    <% let pages=total % coursesPerPage==0 ? total / coursesPerPage : Math.floor(total % coursesPerPage) +1; %>
        <% if(total!==0){ %>
            <div class="row ml-5">
                <% courses.forEach((course)=>{ %>
                    <div class="card col-sm-3 mr-5 mb-2">
                        <img class="card-img-top" src="http://localhost:5000/course/photo/<%= course._id%>"
                            alt="<%= course.name %>">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= course.name %>
                            </h5>
                            <p class="card-text">
                                <%= course.description %>
                            </p>
                            <a href="/course/<%= course._id%>" class="btn btn-primary">Detail</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div class="paging-button text-center">
                <a href="/category/<%= fieldName%>/<%= categoryName%>/?p=1">
                    <button type="button" class="btn btn-info">
                        <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                    </button>
                </a>
                <% for(let i=1;i<=pages;i++){ %>
                    <a href="/category/<%= fieldName%>/<%= categoryName%>/?p=<%= i%>">
                        <button type="button" class="btn btn-info">
                            <%= i %>
                        </button>
                    </a>
                    <%} %>
                        <a href="/category/<%= fieldName%>/<%= categoryName%>/?p=<%= pages%>">
                            <button type="button" class="btn btn-info">
                                <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                            </button>
                        </a>
            </div>
            <%}else{%>
                <div class="row ml-5">
                    <h2>No courses in this category</h2>
                </div>
                <%}%>
</div>