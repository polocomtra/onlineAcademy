<div class="container mt-5">
    <div class="row">
        <% courses.forEach((course)=>{ %>
            <div class="card col-sm-3 mr-5 mb-2">
                <img class="card-img-top" src="http://localhost:5000/course/photo/<%= course._id%>"
                    alt="<%= course.name %>">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= course.name %>
                    </h5>
                    <p class="card-text">
                        <i>
                            Category: <%= course.category.name %>
                        </i>
                    </p>
                    <p class="card-text">
                        <%= course.description %>
                    </p>
                    <p class="card-text">
                        Teacher: <%= course.teacher.name %>
                    </p>
                    <p class="card-text">
                        <i>
                            Price: <%= course.price %>
                        </i>
                    </p>
                    <a href="/course/<%= course._id%>" class="btn btn-primary">Detail</a>
                </div>
            </div>
            <% }) %>
    </div>
    <div class="paging-button text-center">
        <a href="/courses/?p=1">
            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
        </a>
        <% pages.forEach(page=>{ %>
            <a href="/courses/?p=<%= page.value%>">
                <%= page.value %>
            </a>
            <% }) %>
                <a href="/courses/?p=<%= pages.length%>">
                    <i class="fa fa-angle-double-right" aria-hidden="true"></i>
                </a>
    </div>
</div>
